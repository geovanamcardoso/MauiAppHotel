<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">
    
    <!--CenterAndExpand centraliza o conteúdo no meio da Tela, verticalmente
    Auto faz com que se adapte com o tamanho dos outros elementos-->
    
    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Label Text="Suíte Super Luxo" 
               TextColor="{StaticResource Primary}"
               FontFamily="Poppins-Regular"
               FontSize="50"
               HorizontalTextAlignment="Center"/>

        <!--Caixinha com quantidade de adultos e crianças-->
        <Frame Margin="10">

            <HorizontalStackLayout>
                
                <HorizontalStackLayout>

                    <Label Text="Adultos: "/>
                    <Label Text="2" TextColor="{StaticResource Primary}"/>
                    
                </HorizontalStackLayout>

                <HorizontalStackLayout>

                    <Label Text="Crianças: "/>
                    <Label Text="2" TextColor="{StaticResource Primary}"/>

                </HorizontalStackLayout>

            </HorizontalStackLayout>
            
        </Frame>

        <!--Tabela com checkin, checkout e estadia da suíte-->
        <Frame Margin="10">
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in: "/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out: "/>
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia: "/>

                <Label Grid.Row="1" Grid.Column="0" Text="27/05/2025 "/>
                <Label Grid.Row="1" Grid.Column="1" Text="30/05/2025 "/>
                <Label Grid.Row="1" Grid.Column="2" Text="3 "/>

            </Grid>
        </Frame>

        <!--Caixa com valor total-->
        <Frame Margin="10">
            <HorizontalStackLayout>
                <Label Text="Valor Total: "/>
                <Label Text="R$ 750,00"/>
            </HorizontalStackLayout>
        </Frame>

        <Button Text="Voltar"
         Clicked="Button_Clicked"
         BackgroundColor="{StaticResource Primary}"
         TextColor="White"
         CornerRadius="10"
         WidthRequest="150"
         HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>