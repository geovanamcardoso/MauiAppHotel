<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
             Title="Sobre"
             BackgroundColor="{StaticResource MidnightBlue}"
             NavigationPage.HasNavigationBar="False">

    <VerticalStackLayout VerticalOptions="CenterAndExpand" Padding="20" Spacing="40">
        <Label Text="Sistema de Hospedagem"
               FontFamily="Poppins-Regular"
               FontSize="28"
               TextColor="{StaticResource PrimaryDark}"
               HorizontalOptions="Center" 
               HorizontalTextAlignment="Center"/>
        
        <Label Text="Hotel MAUI"
                FontFamily="Poppins-Medium"
                FontSize="30"
                TextColor="{StaticResource PrimaryDark}"
                HorizontalOptions="Center" />

        <Frame BackgroundColor="{StaticResource PrimaryDark}">

            <VerticalStackLayout Padding="10">
                <Label Text="Desenvolvido por: Geovana Maria da Silva Cardoso"
                FontFamily="Poppins-Light"
                FontSize="18"
                TextColor="{StaticResource MidnightBlue}"
                HorizontalOptions="StartAndExpand"
                 Padding="7"/>

                <Label Text="Ano de Desenvolvimento: 2025"
                    FontFamily="Poppins-Light"
                    FontSize="18"
                    TextColor="{StaticResource MidnightBlue}"
                    HorizontalOptions="StartAndExpand" 
                    Padding="7"/>

                <Label Text="Plataforma: .NET MAUI"
                    FontFamily="Poppins-Light"
                    FontSize="18"
                    TextColor="{StaticResource MidnightBlue}"
                    HorizontalOptions="StartAndExpand" 
                    Padding="7"/>
            </VerticalStackLayout>
        </Frame>
        
         <Button Text="Voltar"
                     Clicked="OnBtnVoltarClicked"
                     BackgroundColor="{StaticResource PrimaryDark}"
                     TextColor="{StaticResource MidnightBlue}"
                     CornerRadius="10"
                     WidthRequest="150"
                     HorizontalOptions="Center" />
    </VerticalStackLayout>

</ContentPage>
