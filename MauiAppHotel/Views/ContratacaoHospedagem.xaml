<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ContratacaoHospedagem"
             Title="ContratacaoHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource MidnightBlue}">
    <!--XAML é muito mais exigente que HTML-->
    <VerticalStackLayout VerticalOptions="CenterAndExpand" Padding="3" Spacing="10">
        <Label 
            Text="Cálculo da Diária"
            FontFamily="Poppins-Regular" 
            TextColor="{StaticResource PrimaryDark}" 
            FontSize="40"
            HorizontalOptions="Center"
            />

        <Frame>
            <VerticalStackLayout>
                <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*,*,2" Margin="5">

                    <Label Grid.Row="0" Grid.Column="0" 
                           Text="Adultos:"
                           FontFamily="Poppins-Regular"/>
                    
                    
                    <Label Grid.Row="0" Grid.Column="1" 
                           TextColor="{StaticResource PrimaryDark}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_adultos}"
                           />

                    <Stepper Grid.Row="0" Grid.Column="2"
                             x:Name="stp_adultos"
                             Minimum="0"
                             Maximum="10"
                             Increment="1"
                             WidthRequest="120"
                             HeightRequest="40" 
                             BackgroundColor="{StaticResource PrimaryDark}">
                        
                    </Stepper>
                    
                    <Label Grid.Row="1" Grid.Column="0" 
                           Text="Crianças:"
                           FontFamily="Poppins-Regular"/>

                    <Label Grid.Row="1" Grid.Column="1" 
                           TextColor="{StaticResource PrimaryDark}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_criancas}"
                       />

                    <Stepper Grid.Row="1" Grid.Column="2"
                             x:Name="stp_criancas"
                             Minimum="0"
                             Maximum="10"
                             Increment="1"
                             WidthRequest="120"
                             HeightRequest="40"
                             BackgroundColor="{StaticResource PrimaryDark}"> 
                        
                    </Stepper>
                </Grid>

                <Label Text="Escolha sua Suíte" FontFamily="Poppins-Regular"/>
                <Picker x:Name="pck_quarto" Title="Selecione sua Acomodação" FontFamily="Poppins-Light" 
                        ItemDisplayBinding="{Binding Descricao}"/>

                <Frame Padding="10" Margin="10">
                    
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Período da Estadia" FontFamily="Poppins-Regular"/>
                        
                        <HorizontalStackLayout>
                            <Label Text="Check-in: " FontFamily="Poppins-Light"/>
                            <DatePicker x:Name="dtpck_checkin" 
                                        DateSelected="dtpck_checkin_DateSelected"
                                        Format="dd/MM/yyyy"/>
                        </HorizontalStackLayout>
                        
                        <HorizontalStackLayout>
                            <Label Text="Check-out: " FontFamily="Poppins-Light"/>
                            <DatePicker x:Name="dtpck_checkout" Format="dd/MM/yyyy"/>
                        </HorizontalStackLayout>
                        
                    </VerticalStackLayout>
                    
                </Frame>

                <VerticalStackLayout Spacing="15" Margin="10">
                    <Button Text="Sobre"
                            FontFamily="Poppins-Regular"
                            BackgroundColor="{StaticResource PrimaryDark}"
                            TextColor="{StaticResource MidnightBlue}"
                            CornerRadius="10"
                            Clicked="OnBtnSobreClicked" />

                    <Button Text="Avançar" 
                            FontFamily="Poppins-Regular"
                            BackgroundColor="{StaticResource PrimaryDark}"
                            TextColor="{StaticResource MidnightBlue}"
                            CornerRadius="10"
                            Clicked="Button_Clicked"/>
                </VerticalStackLayout>
            </VerticalStackLayout>
            
        </Frame>
        
        
    </VerticalStackLayout>
</ContentPage>